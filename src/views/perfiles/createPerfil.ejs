<%- include('../partials/_header'); %>

<h1>Crear Usuario</h1>
    <form action="/api/perfiles/create" method="POST">
        <label for="descripcion">Descripción:</label>
        <input type="text" id="descripcion" name="descripcion" required>
        <br>

        <label for="valoracionPromedio">Valoración Promedio:</label>
        <input type="number" step="0.1" id="valoracionPromedio" name="valoracionPromedio" required>
        <br>

        <label for="telefono">Teléfono:</label>
        <input type="tel" id="telefono" name="telefono" required>
        <br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <br>

        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required>
        <br>

        <label for="apellido">Apellido:</label>
        <input type="text" id="apellido" name="apellido" required>
        <br>

        <label for="fechaNacimiento">Fecha de Nacimiento:</label>
        <input type="date" id="fechaNacimiento" name="fechaNacimiento" required>
        <br>

        <label for="Usuario_idUsuario">ID Usuario:</label>
        <input type="number" id="Usuario_idUsuario" name="Usuario_idUsuario" required>
        <br>

        <button type="submit">Crear Usuario</button>
    </form>

<%- include('../partials/_footer'); %>
